<Page x:Class="APIMETEO.Vincent.Malitine.views.settingspage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:APIMETEO.Vincent.Malitine.views"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="840"
      Title="settingspage"
      Background="Transparent">

    <Page.Resources>
        <!-- Style pour les cartes de thème -->
        <Style x:Key="ThemeCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les cartes de paramètres -->
        <Style x:Key="SettingCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundColor}"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour la TextBox -->
        <Style x:Key="CityTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="5,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="CaretBrush" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les boutons de sauvegarde -->
        <Style x:Key="SaveButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource AccentHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <StackPanel>
                <!-- Section Ville par défaut -->
                <Border Style="{StaticResource SettingCardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Titre -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="🏙️" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Ville par défaut" 
                                       Foreground="{DynamicResource TextPrimaryColor}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Description -->
                        <TextBlock Grid.Row="1"
                                   Text="Définissez la ville à afficher au démarrage de l'application" 
                                   Foreground="{DynamicResource TextSecondaryColor}"
                                   FontSize="14"
                                   Margin="0,0,0,15"
                                   TextWrapping="Wrap"/>

                        <!-- Champ de saisie -->
                        <Grid Grid.Row="2" Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Name="DefaultCityTextBox"
                                     Style="{StaticResource CityTextBox}"
                                     Height="45"/>

                            <Button Grid.Column="2"
                                    Name="SaveCityBtn"
                                    Style="{StaticResource SaveButton}"
                                    Content="💾 Enregistrer"
                                    Click="SaveCityBtn_Click"/>
                        </Grid>

                        <!-- Ville actuelle -->
                        <StackPanel Grid.Row="3" Orientation="Horizontal">
                            <TextBlock Text="Ville actuelle : " 
                                       Foreground="{DynamicResource TextSecondaryColor}"
                                       FontSize="13"/>
                            <TextBlock Name="CurrentCityDisplay"
                                       Text="Annecy" 
                                       Foreground="{DynamicResource AccentColor}"
                                       FontSize="13"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Titre de la section thèmes -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                    <TextBlock Text="🎨" FontSize="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Thèmes de couleur" 
                               Foreground="{DynamicResource TextPrimaryColor}"
                               FontSize="24"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Sélectionnez un thème pour personnaliser l'apparence de l'application" 
                           Foreground="{DynamicResource TextSecondaryColor}"
                           FontSize="14"
                           Margin="0,0,0,30"/>

                <!-- Grille des thèmes -->
                <ItemsControl Name="ThemesListControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ThemeCardStyle}"
                                    Background="{Binding CardColor}"
                                    BorderBrush="{Binding BorderColor}"
                                    MouseLeftButtonDown="ThemeCard_Click"
                                    Tag="{Binding Name}"
                                    Width="200"
                                    Height="150">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Nom du thème -->
                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Name}"
                                               Foreground="White"
                                               FontSize="16"
                                               FontWeight="Bold"
                                               Margin="0,0,0,15"/>

                                    <!-- Aperçu des couleurs -->
                                    <StackPanel Grid.Row="1" 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center">
                                        <Border Width="30" Height="30" 
                                                Background="{Binding AccentColor}"
                                                CornerRadius="15"
                                                Margin="5"/>
                                        <Border Width="30" Height="30" 
                                                Background="{Binding SecondaryColor}"
                                                CornerRadius="15"
                                                Margin="5"/>
                                    </StackPanel>

                                    <!-- Indicateur de sélection -->
                                    <TextBlock Grid.Row="2"
                                               Text="✓ Actif"
                                               Foreground="{Binding AccentColor}"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibility}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
