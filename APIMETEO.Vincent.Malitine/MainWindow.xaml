<Window x:Class="APIMETEO.Vincent.Malitine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APIMETEO.Vincent.Malitine"
        mc:Ignorable="d"
        Title="V's Meteo 🍃" Height="600" Width="900"
        Background="#0f1419"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <!-- Style pour les cartes -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1a1f2e"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les titres -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#8b949e"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Style pour les valeurs principales -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Style pour la température principale -->
        <Style x:Key="MainTempStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="72"/>
            <Setter Property="FontWeight" Value="Light"/>
        </Style>

        <!-- Style pour le bouton de recherche -->
        <Style x:Key="SearchButton" TargetType="Button">
            <Setter Property="Background" Value="#58a6ff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#79c0ff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#388bfd"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec bouton de recherche -->
        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock Text="☁️ MÉTÉO" 
                           Foreground="White" 
                           FontSize="32" 
                           FontWeight="Bold"/>
                <TextBlock Name="CityNameDisplay"
                           Foreground="#58a6ff" 
                           FontSize="18" 
                           Margin="0,5,0,0"/>
            </StackPanel>

            <Button HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Name="SearchCityBtn"
                    Style="{StaticResource SearchButton}"
                    Content="🔍 Changer de ville"
                    Click="SearchCityBtn_Click"/>
        </Grid>

        <!-- Zone principale -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Carte principale - Température actuelle -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" 
                    Margin="0,0,15,0" 
                    Background="#1a1f2e">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icône météo -->
                    <Viewbox Grid.Row="0" Height="120" Width="120" 
                             HorizontalAlignment="Stretch" 
                             Margin="0,10,0,0">
                        <TextBlock Name="Weather" FontSize="100"/>
                    </Viewbox>

                    <!-- Température actuelle -->
                    <TextBlock Grid.Row="1" 
                               Name="Temp"
                               Style="{StaticResource MainTempStyle}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Text="--°C"
                               FontSize="50"/>

                    <!-- Ressenti -->
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <TextBlock Text="RESSENTI" Style="{StaticResource TitleStyle}" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Name="TempMid" 
                                   Style="{StaticResource ValueStyle}"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   Text="--°C"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Panneau latéral - Détails -->
            <StackPanel Grid.Column="1" Margin="15,0,0,0">

                <!-- Carte Température Max -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🔺 MAXIMUM" Style="{StaticResource TitleStyle}"/>
                        <TextBlock Name="TempHigh" 
                                   Style="{StaticResource ValueStyle}"
                                   Text="--°C"/>
                    </StackPanel>
                </Border>

                <!-- Carte Température Min -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="🔻 MINIMUM" Style="{StaticResource TitleStyle}"/>
                        <TextBlock Name="TempLow" 
                                   Style="{StaticResource ValueStyle}"
                                   Text="--°C"/>
                    </StackPanel>
                </Border>

                <!-- Carte Humidité -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <TextBlock Text="💧 HUMIDITÉ" Style="{StaticResource TitleStyle}"/>
                        <TextBlock Name="Precip" 
                                   Style="{StaticResource ValueStyle}"
                                   Text="--%"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Pied de page -->
        <Border Grid.Row="2" 
                Background="#161b22" 
                CornerRadius="10" 
                Padding="15" 
                Margin="0,30,0,0">
            <Grid>
                <TextBlock Text="V's Meteo v1.01" 
                           Foreground="#8b949e" 
                           FontSize="13"
                           VerticalAlignment="Center"/>
                <TextBlock Text="Powered by OpenWeatherMap" 
                           Foreground="#58a6ff" 
                           FontSize="12"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
