<Page x:Class="APIMETEO.Vincent.Malitine.views.meteopage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:APIMETEO.Vincent.Malitine.views"
      Title="meteopage"
      Background="#0f1419">

    <Page.Resources>
        <!-- Style pour les cartes -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1a1f2e"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.5" BlurRadius="20" ShadowDepth="5"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les cartes de prévision -->
        <Style x:Key="ForecastCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#1a1f2e"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Carte principale - Météo actuelle (Grid Row 1 de MainWindow) -->
        <Border Grid.Row="0" 
                Style="{StaticResource CardStyle}" 
                Margin="0,0,0,20"
                Padding="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Nom de la ville -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="0,0,50,0">
                    <TextBlock Name="CityNameDisplay"
                               Text="Paris"
                               Foreground="White" 
                               FontSize="36" 
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- Icône météo et températures -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <Viewbox Height="80" Width="80" Margin="0,0,20,0">
                        <TextBlock Name="Weather"
                                   Text="?"
                                   FontSize="80"
                                   Foreground="White"/>
                    </Viewbox>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Name="Temp"
                                   Text="--°C"
                                   Foreground="White"
                                   FontSize="56"
                                   FontWeight="Light"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                            <TextBlock Text="Temp moyenne: " 
                                       Foreground="#8b949e"
                                       FontSize="14"
                                       FontWeight="Medium"/>
                            <TextBlock Name="TempMid"
                                       Text="--°C"
                                       Foreground="#8b949e"
                                       FontSize="14"
                                       FontWeight="Medium"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Détails supplémentaires -->
                <StackPanel Grid.Column="2" 
                            VerticalAlignment="Center"
                            Margin="50,0,0,0">
                    <Border Background="#161b22" 
                            CornerRadius="8" 
                            Padding="15,10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="MAX" 
                                       Foreground="#8b949e" 
                                       FontSize="11"
                                       FontWeight="Medium"/>
                            <TextBlock Name="TempHigh" 
                                       Text="--°C"
                                       Foreground="#ff6b6b"
                                       FontSize="18"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#161b22" 
                            CornerRadius="8" 
                            Padding="15,10"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="MIN" 
                                       Foreground="#8b949e" 
                                       FontSize="11"
                                       FontWeight="Medium"/>
                            <TextBlock Name="TempLow" 
                                       Text="--°C"
                                       Foreground="#4dabf7"
                                       FontSize="18"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    
                    <Border Background="#161b22" 
                            CornerRadius="8" 
                            Padding="15,10">
                        <StackPanel>
                            <TextBlock Text="HUMIDITÉ" 
                                       Foreground="#8b949e" 
                                       FontSize="11"
                                       FontWeight="Medium"/>
                            <TextBlock Name="Precip" 
                                       Text="--%"
                                       Foreground="#51cf66"
                                       FontSize="18"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Prévisions sur 6 jours (Grid Row 2 de MainWindow) -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titre des prévisions -->
            <TextBlock Grid.Row="0" 
                       Text="PRÉVISIONS" 
                       Foreground="#8b949e"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="5,0,0,15"/>

            <!-- Grille des prévisions -->
            <ItemsControl Grid.Row="1" Name="ForecastList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" Rows="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ForecastCardStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Jour -->
                                <StackPanel Grid.Column="0" 
                                            VerticalAlignment="Center"
                                            Margin="0,0,15,0">
                                    <TextBlock Text="{Binding DayName}" 
                                               Foreground="White"
                                               FontSize="14"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Date}" 
                                               Foreground="#8b949e"
                                               FontSize="11"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- Icône et condition -->
                                <StackPanel Grid.Column="1" 
                                            Orientation="Horizontal"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                    <Viewbox Height="35" Width="35" Margin="0,0,10,0">
                                        <TextBlock Text="{Binding WeatherIcon}" 
                                                   FontSize="35"
                                                   Foreground="White"/>
                                    </Viewbox>
                                    <TextBlock Text="{Binding Condition}" 
                                               Foreground="#8b949e"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               MaxWidth="100"/>
                                </StackPanel>

                                <!-- Température -->
                                <StackPanel Grid.Column="2" 
                                            VerticalAlignment="Center"
                                            Margin="15,0,0,0">
                                    <TextBlock Text="{Binding Temperature}" 
                                               Foreground="White"
                                               FontSize="22"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding TemperatureRange}" 
                                               Foreground="#8b949e"
                                               FontSize="11"
                                               HorizontalAlignment="Right"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Page>
